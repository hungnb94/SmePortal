<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hungnguyenbasv.d7_loginform.activity.activity.MenuMainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_marginBottom="@dimen/height_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tab_layout"
        android:layout_alignParentBottom="true"/>
        <!--android:background="#c8c8c9"-->

</RelativeLayout>
