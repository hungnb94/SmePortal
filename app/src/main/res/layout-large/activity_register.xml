<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_horizontal"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:background="@drawable/the_project"
            android:gravity="center"
            android:textSize="@dimen/super_large_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/margin_default_large"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textSize="@dimen/large_text_large" />
    <!--android:textColor="@color/colorBlack"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/medium_text_large"
                android:id="@+id/edtFirstname"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editTextHeigh_large"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="@dimen/margin_edit_text_large"
                android:background="@color/colorGray"
                android:gravity="fill_horizontal"
                android:hint="@string/first_name"
                android:inputType="text"
                android:lines="1"
                android:selectAllOnFocus="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/medium_text_large"
                android:id="@+id/edtLastname"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editTextHeigh_large"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="@dimen/margin_edit_text_large"
                android:background="@color/colorGray"
                android:gravity="fill_horizontal"
                android:hint="@string/last_name"
                android:inputType="text"
                android:lines="1"
                android:selectAllOnFocus="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/medium_text_large"
                android:id="@+id/edtEmail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editTextHeigh_large"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="@dimen/margin_edit_text_large"
                android:background="@color/colorGray"
                android:gravity="fill_horizontal"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:selectAllOnFocus="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/medium_text_large"
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHeigh_large"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="@dimen/margin_edit_text_large"
                android:background="@color/colorGray"
                android:gravity="start"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:lines="1"
                android:selectAllOnFocus="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textSize="@dimen/medium_text_large"
                android:id="@+id/edtConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHeigh_large"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="@dimen/margin_edit_text_large"
                android:background="@color/colorGray"
                android:gravity="start"
                android:hint="@string/re_enter_password"
                android:inputType="textPassword"
                android:lines="1"
                android:selectAllOnFocus="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:textSize="@dimen/medium_text_large"
                android:layout_marginBottom="@dimen/margin_default_large"
                android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDefault"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/register"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_default_large"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_default_large"
            android:gravity="right"
            android:text="@string/already_member"
            android:textSize="@dimen/medium_text_large" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text_large" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_login_height_large"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/facebook_login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_facebook"
                android:tag="facebook_login_button" />

            <ImageButton
                android:id="@+id/google_login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_google"
                android:tag="google_login_button" />

            <ImageButton
                android:id="@+id/linked_login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_linked"
                android:tag="google_login_button" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
